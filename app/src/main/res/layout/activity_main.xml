<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/txtoperation"
                android:layout_width="409dp"
                android:layout_height="60dp"
                android:text="OpercaciÃ³n" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="409dp"
                android:layout_height="60dp"
                android:text="Resultado" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="409dp"
                android:layout_height="629dp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btnopen"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="("
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    android:paddingBottom="10dp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btnclose"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text=")"
                    android:backgroundTint="#000080"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btnclear"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="c"
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btndiv"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="/"
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    app:layout_column="3"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:textSize="30dp"

                    android:text="7"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:textSize="30dp"
                    android:text="8"
                    app:layout_column="1"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="9"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btnmulti"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="x"
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    app:layout_column="3"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="4"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="5"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="6"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btnless"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="-"
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    app:layout_column="3"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="1"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="2"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="3"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/btnpluss"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="+"
                    android:textSize="30dp"
                    android:backgroundTint="#000080"
                    app:layout_column="3"
                    app:layout_row="3" />

                <Button
                    android:id="@+id/btnmoreless"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="+/-"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/btndot"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="."
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="4" />

                <Button
                    android:id="@+id/btnequal"
                    android:layout_width="103dp"
                    android:layout_height="100dp"
                    android:text="="
                    android:textSize="30dp"
                    android:backgroundTint="#FEDE00"
                    app:layout_column="3"
                    app:layout_row="4" />


            </androidx.gridlayout.widget.GridLayout>
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>